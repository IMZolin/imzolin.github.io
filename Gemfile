source 'https://rubygems.org'

gem 'jekyll', '~> 3.10'  # or your version
gem 'webrick'            # needed for local dev with Ruby 3.x
gem 'mini_racer'         # for JS support in some plugins
gem 'unicode_utils'

group :jekyll_plugins do
  gem 'classifier-reborn'
  gem 'jekyll-archives', '~> 2.0'
  gem 'jekyll-diagrams'
  gem 'jekyll-email-protect'
  gem 'jekyll-feed'
  gem 'jekyll-get-json'
  gem 'jekyll-imagemagick'
  gem 'jekyll-jupyter-notebook'
  gem 'jekyll-link-attributes'
  gem 'jekyll-minifier'
  gem 'jekyll-paginate-v2'
  gem 'jekyll-scholar'
  gem 'jekyll-sitemap'
  gem 'jekyll-toc'
  gem 'jekyll-twitter-plugin'
  gem 'jemoji'
  gem 'faraday-retry'
end

group :other_plugins do
  gem 'feedjira'
  gem 'httparty'
end
